<% if signed_in? %>
	<% if current_user %>
		<nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
		  <!-- Brand and toggle get grouped for better mobile display -->
		  <!-- <div class="navbar-header"> -->
		    <div class="dropdown">
			    <a class="navbar-brand text-danger font-weight-bold dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			    <i class="fa fa-list-ul"></i> Swish It!</a>

		      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
		      	<span class="dropdown-item-text">Your Lists</span>
	          <div class="dropdown-divider"></div>
		      	<% current_user.lists.each do |list| %>
		        <a class="dropdown-item" href="<%= list_path(list) %>"><%= list.name %></a>
		        <% end %>
	          <div class="dropdown-divider"></div>
		        <a class="dropdown-item" href="<%= new_list_path %>">New List!</a>
		      </div>
		    </div>

		    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
		      <span class="navbar-toggler-icon"></span>
		    </button>
		  <!-- </div> -->


		  <!-- Collect the nav links, forms, and other content for toggling -->
		  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
		    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
		      <li class="nav-item active">
		      <%= link_to "Home", home_path, class: "nav-link" %></li>
		      <!-- search bar -->
		      <%= form_tag(lists_path, :method => "get", id: "search-form", class: 'form-inline') do %>
	          <%= text_field_tag :search, params[:search], placeholder: "Search Tags", class: 'form-control mr-sm-2' %>
	          <%= submit_tag "Search", :name => nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
		      <% end %>
		    </ul>

		    <ul class="nav navbar-nav navbar-right">
		      <a href="<%= new_list_path %>" class="navbar-brand text-danger btn">
		    	<i class="fa fa-plus"></i></a>

		      <li class="nav-item dropdown">
		        <a class="nav-link rounded-circle btn btn-danger" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		          <%= current_user.first_name[0] %><%= current_user.last_name[0] %>
		        </a>
		        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
		          <%= link_to "Edit Account", edit_user_path(current_user.id), class: "dropdown-item" %>
		          <div class="dropdown-divider"></div>
		          <%= link_to "Sign Out", sign_out_path, method: :delete, class: "dropdown-item" %>
		        </div>
		      </li>
		    </ul>
		  </div><!-- /.navbar-collapse -->
		</nav>
		<%end%>
	
<% else %>
	<nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
		  <!-- Brand and toggle get grouped for better mobile display -->
		  <!-- <div class="navbar-header"> -->
		    
		    <a class="navbar-brand text-danger font-weight-bold " href="#" role="button">
			    <i class="fa fa-list-ul"></i> Swish It!</a>

		    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
		      <span class="navbar-toggler-icon"></span>
		    </button>
		  <!-- </div> -->

		  <!-- Collect the nav links, forms, and other content for toggling -->
		  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
		    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
		  
		    </ul>

		    <ul class="nav navbar-nav navbar-right">
		      <li class="nav-item"><%= link_to "Sign Up", sign_up_path, class: "nav-link btn btn-danger" %></li>
		      <li class="nav-item"><%= link_to "Sign In", sign_in_path, class: "nav-link" %></li>
		        
		    </ul>
		  </div><!-- /.navbar-collapse -->
		</nav>
<% end %>