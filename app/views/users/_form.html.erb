<div class="card">
  <article class="card-body">

    <% if params[:action] == "new" %>
    <%= link_to "Sign In", sign_in_path, class: "float-right btn btn-outline-primary other-links" %>

    <h4 class="card-title mb-4 mt-1">Sign Up</h4>
    <% end %>
    
    <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <% if params[:action] == "new" %>
        <div class="text-field form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', placeholder: "example@email.com", class: 'form-control' %>
        </div>

        <div class="password-field form-group">
          <%= form.label :password %>
          <%= form.password_field :password, placeholder: "******", class: 'form-control' %>
        </div>
      <% end %>

      <div class="text-field form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="text-field form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="text-field form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: 'form-control' %>
      </div>

      <div class="text-field form-group">
        <%= form.label :birthday %>
        <%= form.date_select :birthday, class: 'form-control' %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="submit-field form-group">
            <%= form.submit 'Create', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
        
        
      </div>
    <% end %>
  </article>
</div> <!-- card.// -->